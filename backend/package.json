{
	"name": "monitor-backend",
	"version": "1.0.0",
	"description": "an app to interact with a server's file system remotely",
	"repository": "https://github.com/paulvaden/EthDev.git",
	"main": "build/main.js",
	"scripts": {
		"start": "node build/main.js",
		"build-and-push": "npm run docker-build && npm run docker-push",
		"docker-build": "tsc && docker build -t mbecker2020/monitor .",
		"docker-push": "docker push mbecker2020/monitor",
		"docker-run": "sudo docker run -d --name monitor -v /home/ubuntu:/rootDir -v /var/run/docker.sock:/var/run/docker.sock --network=\"host\" mbecker2020/monitor",
		"build": "tsc",
		"build-copy-push": "npm run pull-deployment-repo && npm run build && npm run copy && npm run push",
		"pull-deployment-repo": "cd ../../monitor-backend && git pull",
		"copy": "npm run remove-old && cp -a build/. ../../monitor-backend/deploy/build && cp -a config/. ../../monitor-backend/deploy/config && cp Dockerfile ../../monitor-backend/deploy && cp package.json ../../monitor-backend/deploy",
		"push": "cd ../../monitor-backend && git add . && git commit -m \"update\" && git push origin",
		"remove-old": "rm -r ../../monitor-backend/deploy && mkdir ../../monitor-backend/deploy &&  mkdir ../../monitor-backend/deploy/build && mkdir ../../monitor-backend/deploy/config",
		"docker-run-DEV": "docker run -d --name monitor-dev -v /home/ubuntu:/rootDir -v /var/run/docker.sock:/var/run/docker.sock --network=\"host\" -e \"PORT=82\" -e \"HOST=monitor-dev.ethdevtech.com\" -e \"MONGO_URL=mongodb://localhost:27017/monitor-dev\" -e \"IS_DEV=true\" localhost:5000/monitor",
		"docker-start": "npm run docker-build && npm run docker-run && echo \"Monitor will be running in a couple of seconds\"",
		"docker-start-DEV": "npm run docker-build && npm run docker-run-DEV && echo \"Monitor DEV will be running in a couple of seconds\""
	},
	"author": "mbecker20",
	"license": "ISC",
	"dependencies": {
		"@feathersjs/authentication": "^4.5.11",
		"@feathersjs/authentication-local": "^4.5.11",
		"@feathersjs/authentication-oauth": "^4.5.11",
		"@feathersjs/configuration": "^4.5.11",
		"@feathersjs/errors": "^4.5.11",
		"@feathersjs/express": "^4.5.11",
		"@feathersjs/feathers": "^4.5.11",
		"@feathersjs/transport-commons": "^4.5.11",
		"abort-controller": "^3.0.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dockerode": "^3.2.1",
		"dotenv": "^10.0.0",
		"feathers-mongoose": "^8.3.1",
		"fs-extra": "^9.1.0",
		"helmet": "^4.3.1",
		"mongoose": "^6.2.2",
		"node-fetch": "^2.6.1",
		"serve-favicon": "^2.5.0",
		"systeminformation": "^5.5.0",
		"winston": "^3.3.3",
		"ws": "^7.4.4"
	},
	"devDependencies": {
		"@types/compression": "^1.7.0",
		"@types/cors": "^2.8.9",
		"@types/dockerode": "^3.2.2",
		"@types/fs-extra": "^9.0.6",
		"@types/mongoose": "^5.10.3",
		"@types/node-fetch": "^2.5.8",
		"@types/serve-favicon": "^2.5.2",
		"@types/ws": "^7.4.0",
		"typescript": "^4.1.3"
	},
	"prettier": {
		"tabWidth": 2,
		"arrowParens": "always",
		"singleQuote": false,
		"semi": false,
		"printWidth": 10000,
		"useTabs": true,
		"trailingComma": "es5"
	}
}
